
<div class = 'row'>
  <div class = 'col-md-4 col-md-offset-4 center'>
    <h3>Chef: <strong><%= @chef.chefname %></strong></h3>
  </div>
</div>

<%= link_to 'Update chef', edit_chef_path(@chef) %>&nbsp&nbsp
<%= link_to 'Back to Chefs', chefs_path %>

<%= will_paginate @recipe %>

<% @recipe.each do |recipe| %>
  <div class = 'row'>
  
    <div class = 'col-md-6 col-lg-offset-2 well'>
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= recipe.summary %></p>

      <p>
        <span class = 'quiet'>
          <strong>Create:</strong> <small><%= time_ago_in_words(recipe.created_at) %> ago</small>,
          &nbsp&nbsp&nbsp
          <strong>Updated:</strong> <small><%= time_ago_in_words(recipe.updated_at) %> ago</small>
        </span>
      </p>

      <%= render 'recipes/likes', obj: recipe %>

    </div>

    <div class = 'col-md-4'>
      <%= image_tag(recipe.picture.url, size: '250x150', class: 'gravatar') if recipe.picture? %>
    </div>
  </div>
<% end %>