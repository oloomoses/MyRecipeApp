<h1 class = 'text-center'>New Recipe</h1><hr/>

<div class = 'row'>
  <div class = 'col-md-8 col-md-offset-2 well'>
    <%= form_for @recipe do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :summary %>
      <%= f.text_field :summary %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit 'Create Recipe', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>